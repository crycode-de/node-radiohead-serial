{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "target": "ES2020",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
      "src/*.ts",
      "src/*.d.ts",
      "test/*.ts"
  ]
}
