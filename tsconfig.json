{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "target": "ES2022",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "noEmit": true
  },
  "include": [
      "src/*.ts",
      "src/*.d.ts",
      "test/*.ts",
      "eslint.config.mjs"
  ]
}
